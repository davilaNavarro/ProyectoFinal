<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>cl.controlador.NewServlet</servlet-class>
        <init-param>
            <param-name>Name</param-name>
            <param-value>Value</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ValidarLogin</servlet-name>
        <servlet-class>cl.controlador.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InicioSesion</servlet-name>
        <servlet-class>cl.controlador.InicioSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarUsuario</servlet-name>
        <servlet-class>cl.controlador.RegistrarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarUsu</servlet-name>
        <servlet-class>cl.controlador.ListarUsu</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarFeria</servlet-name>
        <servlet-class>cl.controlador.RegistrarFeria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarTpProd</servlet-name>
        <servlet-class>cl.controlador.RegistrarTpProd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MensualesCom</servlet-name>
        <servlet-class>cl.controlador.MensualesCom</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValidarLogin</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InicioSesion</servlet-name>
        <url-pattern>/iniciar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarUsuario</servlet-name>
        <url-pattern>/nuevoUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarUsu</servlet-name>
        <url-pattern>/listaUsu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarFeria</servlet-name>
        <url-pattern>/ingresarFeria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarTpProd</servlet-name>
        <url-pattern>/ingresarTpProd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MensualesCom</servlet-name>
        <url-pattern>/MensualesCom</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
